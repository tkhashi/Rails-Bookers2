<div class="body">
  <div class="container">
    <p id="notice"></p>

    <% if flash[:notice] %>
      <p class="flash">
        <%= flash[:notice] %>
      </p>
    <% end %>

    <% if @book.errors.any? %>
      <div class="error_explanation">
        <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
      </div>
    <% end %>

    <div class="row">
      <%= render 'books/list', book: @book, user: @user %>
      <div class="col-xs-9">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <% @books.each do |b| %>
              <tr>
                <td>
                  <%= link_to user_path(b.user_id) do %>
                  <%= attachment_image_tag b.user, :profile_image, size:"40x40", format: "jpeg" ,class: "img-circle profile-img", fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%= link_to book_path(b) do %>
                    <%= b.title %></td>
                    <% end %>
                <td><%= b.body %>	</td>

                <td>
                  <% if b.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(b), method: :delete do %>
                    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                    <%= b.favorites.count %> いいね
                  <% end %>

                  <% else %>

                  <%= link_to book_favorites_path(b), method: :post do %>
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                    <%= b.favorites.count %> いいね
                  <% end %>

                  <% end %>
                </td>
                <td>
                  <%= link_to "#{book.count} コメント", book_path(@book.id) %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>

      </div>
    </div>

  </div>
