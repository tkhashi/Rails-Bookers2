<div class="body">
  <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <h2>User info</h2>
            <%= attachment_image_tag user, :profile_image, size:"100x100", format: "jpeg" ,class: "img-circle profile-img", fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to user_path(:id) do %>
              <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <% end %>
            </div>

            


        </div>
      </div>
  </div>
</div>
