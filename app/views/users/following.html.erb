<h2>Following Users</h2>
<table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
              </tr>
            </thead>
            <% unless @user.followings.nil?%>
            <% @users.each do |b| %>
            <tr>
              <td><%= link_to user_path(b.id) do %>
                  <%= attachment_image_tag b, :profile_image, size:"40x40", format: "jpeg" ,class: "img-circle profile-img", fallback: "no_image.jpg" %></td>
                  <% end %>
              <td><%= b.name %>	</td>
              <th>フォロー数：<%= b.followings.count %></th>
              <th>フォロワー数：<%= b.followers.count %></th>
              <th><%= link_to "show", user_path(b) %></th>
            </tr>
            <% end %>

            <% else %>

            ユーザーはいません
            <% end %>
            </table>
