<body>
  <div class="body">
    <div class="container">
      <p id="notice"></p>
      <% if flash[:notice] %>
        <p class="flash">
          <%= flash[:notice] %>
        </p>
      <% end %>
      
      <% if @book.errors.any? %>
        <div class="error_explanation">
          <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
        </div>
      <% end %>

      <div class="row">
        <%= render 'books/list', book: @book, user: @user1 %>
        <div class="col-xs-9">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |b| %>
              <tr>
                <th><%= link_to user_path(b.user_id) do %>
                    <%= attachment_image_tag b.user, :profile_image, size:"40x40", format: "jpeg" ,class: "img-circle profile-img", fallback: "no_image.jpg" %></th>
                    <% end %>
                <th><%= link_to book_path(b.id) do %>
                    <%= b.title %></th>
                    <% end %>
                <th><%= b.body %>	</th>
                <th colspan="3"></th>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>

  </div>

</body>
